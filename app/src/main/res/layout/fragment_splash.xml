<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.splashFragment"
    android:background="@color/yellow">


    <LinearLayout
        android:id="@+id/Title_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blink"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/_52sdp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It"
            android:layout_weight="1"
            android:textSize="@dimen/_52sdp"
            android:textStyle="bold"
            android:textColor="@color/green"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/Title_tag"
        app:layout_constraintEnd_toEndOf="@id/Title_tag"
        app:layout_constraintTop_toBottomOf="@id/Title_tag"
        android:text="@string/india_s_last_minute_app"
        android:gravity="center"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A zomato company"
        android:textSize="@dimen/_16sdp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_15sdp"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>